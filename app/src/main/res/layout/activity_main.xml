<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#56c3da"
    android:orientation="vertical"
    tools:context="com.smartamigos.signuppage.MainActivity">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/googleProfileImage"
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/myavatar1"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="2dp"></de.hdodenhof.circleimageview.CircleImageView>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="LOGO"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/join_the_comm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join the community"
            android:textColor="@color/colorWhite"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="7dp">

            <com.smartamigos.signuppage.CustomEditText
                android:id="@+id/userNameInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_corner_rounded"
                android:drawableLeft="@drawable/signup_name"
                android:focusable="false"
                android:gravity="center"
                android:hint="Name"
                android:inputType="text" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="7dp">

            <com.smartamigos.signuppage.CustomEditText
                android:id="@+id/userAgeInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_corner_rounded"
                android:drawableLeft="@drawable/signup_age"
                android:focusable="false"
                android:gravity="center"
                android:hint="Age"
                android:inputType="number" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.smartamigos.signuppage.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:text="Gender  : "
            android:textColor="@color/colorWhite"
            android:textSize="26sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/genderMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signup_male"
            app:civ_border_color="@color/colorTransparent"
            app:civ_border_width="2dp" />

        <android.support.v4.widget.Space
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/genderFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signup_female"
            app:civ_border_color="@color/colorTransparent"
            app:civ_border_width="2dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="7dp">

            <com.smartamigos.signuppage.CustomEditText
                android:id="@+id/userLocationInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_corner_rounded"
                android:drawableLeft="@drawable/signup_location"
                android:gravity="center"
                android:hint="Location"
                android:inputType="text" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="7dp">

            <com.smartamigos.signuppage.CustomEditText
                android:id="@+id/userPhoneInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_corner_rounded"
                android:drawableLeft="@drawable/signup_phone"
                android:focusable="false"
                android:gravity="center"
                android:hint="Phone No"
                android:inputType="number" />
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.smartamigos.signuppage.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Avatar : "
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="26sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userAvatarInput"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/myavatar1"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="2dp" />
    </LinearLayout>

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/oval_transparent"
        android:fontFamily="sans-serif"
        android:text="SUBMIT"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />
</LinearLayout>
