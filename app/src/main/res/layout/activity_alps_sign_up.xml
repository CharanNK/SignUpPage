<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alpsblur"
    android:orientation="vertical"
    tools:context="com.smartamigos.signuppage.AlpsSignUp">

    <com.smartamigos.signuppage.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="6AM"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        android:textStyle="bold" />
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:drawablePadding="5dp"
        android:src="@drawable/signup_female"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="3dp" />

    <com.smartamigos.signuppage.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#CFD8DC"
        android:drawableLeft="@drawable/alps_name"
        android:drawablePadding="12dp"
        android:hint="Name"
        android:textColorHint="#CFD8DC" />

    <com.smartamigos.signuppage.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#CFD8DC"
        android:drawableLeft="@drawable/alps_age"
        android:drawablePadding="12dp"
        android:hint="Age"
        android:textColorHint="#CFD8DC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <!--<com.smartamigos.signuppage.CustomTextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="28sp"-->
        <!--android:textColor="@color/colorGray"-->
        <!--android:text="Gender : "/>-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/genderMale"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/alps_male"
            app:civ_border_color="@color/colorGray"
            app:civ_border_width="2dp" />

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/genderFemale"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/alps_female"
            app:civ_border_color="@color/colorGray"
            app:civ_border_width="2dp" />
    </LinearLayout>

    <com.smartamigos.signuppage.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#CFD8DC"
        android:drawableLeft="@drawable/alps_location"
        android:drawablePadding="12dp"
        android:hint="Location"
        android:textColorHint="#CFD8DC" />

    <com.smartamigos.signuppage.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#CFD8DC"
        android:drawableLeft="@drawable/alps_phone"
        android:drawablePadding="12dp"
        android:hint="Phone Number"
        android:textColorHint="#CFD8DC" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/secondSignUpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle"
        android:text="SIGN UP"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

</LinearLayout>
